<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShowDoMilhao.GamePage"
             BackgroundColor="Black"
             Shell.NavBarIsVisible="False">

        <ScrollView>
                <Grid>
                        <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>


                        <Image Source="show_do_milhao.png"
                               Aspect="AspectFill"
                               Grid.Row="0"
                               Grid.Column="0"
                               Grid.ColumnSpan="3"/>

                        <Label Text="Nível: 1"
                               TextColor="White"
                               FontSize="16"
                               FontFamily="StalystaPersonal"
                               Margin="10, 2, 10, 15"
                               x:Name="labelPontuacao"
                               Grid.Row="1"
                               Grid.Column="0"
                               Grid.ColumnSpan="2"/>

                        <Label Text="Pontuação: 0"
                               TextColor="White"
                               FontSize="16"
                               FontFamily="StalystaPersonal"
                               Margin="10,2, 10, 15"
                               x:Name="labelNivel"
                               Grid.Row="1"
                               Grid.Column="2"/>

                        <Label Text="Pergunta:"
                               TextColor="White"
                               FontSize="18"
                               FontFamily="StalystaPersonal"
                               Margin="10,5"
                               Grid.Row="2"
                               Grid.Column="0"
                               Grid.ColumnSpan="3"/>

                        <!-- Frame onde fica a pergunta -->
                        <Frame BackgroundColor="Black"
                               Margin="10,5"
                               Grid.Row="3"
                               Grid.Column="0"
                               Grid.ColumnSpan="3">
                                <Label x:Name="labelPergunta"
                                       HorizontalTextAlignment="Center"
                                       TextColor="White"
                                       FontSize="16"
                                       MaximumWidthRequest="500"
                                       FontFamily="StalystaPersonal"/>
                        </Frame>
                        <!-- Botão de resposta 1-->
                        <Button x:Name="Resposta01"
                                Clicked="clicouBotaoResposta01"
                                BackgroundColor="Black"
                                BorderColor="White"
                                BorderWidth="1"
                                Margin="10,5"
                                TextColor="White"
                                FontSize="12"
                                Grid.Row="4"
                                Grid.Column="0"
                                Grid.ColumnSpan="3"/>
                        <!-- Botão de resposta 2-->
                        <Button x:Name="Resposta02"
                                Clicked="clicouBotaoResposta02"
                                BackgroundColor="Black"
                                BorderColor="White"
                                BorderWidth="1"
                                Margin="10,5"
                                TextColor="White"
                                FontSize="12"
                                Grid.Row="5"
                                Grid.Column="0"
                                Grid.ColumnSpan="3"/>
                        <!-- Botão de resposta 3-->
                        <Button x:Name="Resposta03"
                                Clicked="clicouBotaoResposta03"
                                BackgroundColor="Black"
                                BorderColor="White"
                                BorderWidth="1"
                                Margin="10,5"
                                TextColor="White"
                                FontSize="12"
                                Grid.Row="6"
                                Grid.Column="0"
                                Grid.ColumnSpan="3"/>
                        <!-- Botão de resposta 4-->
                        <Button x:Name="Resposta04"
                                Clicked="clicouBotaoResposta04"
                                BackgroundColor="Black"
                                BorderColor="White"
                                BorderWidth="1"
                                Margin="10,5"
                                TextColor="White"
                                FontSize="12"
                                Grid.Row="7"
                                Grid.Column="0"
                                Grid.ColumnSpan="3"/>
                        <!-- Botão de resposta 5-->
                        <Button x:Name="Resposta05"
                                Clicked="clicouBotaoResposta05"
                                BackgroundColor="Black"
                                BorderColor="White"
                                BorderWidth="1"
                                Margin="10,5"
                                TextColor="White"
                                FontSize="12"
                                Grid.Row="8"
                                Grid.Column="0"
                                Grid.ColumnSpan="3"/>
                        <!-- Botão de ajuda(universitários)-->
                        <Button BackgroundColor="Black"
                                ImageSource="universitario.png"
                                TextColor="Black"
                                Margin="10, 10, 5,10"
                                Grid.Row="9"
                                Grid.Column="0"/>
                        <!-- Botão de ajuda(pular)-->
                        <Button BackgroundColor="Black"
                                ImageSource="right_arrow.png"
                                Clicked="OnAjudaPulaClicked"
                                MaximumWidthRequest="64"
                                TextColor="Black"
                                Margin="5,10"
                                Grid.Row="9"
                                Grid.Column="1"/>
                        <!-- Botão de ajuda(cartas)-->
                        <Button BackgroundColor="Black"
                                ImageSource="cartas.png"
                                Clicked="OnAjudaRetirarCliecked"
                                TextColor="Black"
                                Margin="5, 10, 10, 10"
                                Grid.Row="9"
                                Grid.Column="2"/>
                        <!--Frame de Universitários-->
                        <Frame BackgroundColor="Black"
                               BorderColor="White"
                               Margin="20"
                               x:Name="frameUniversitarios"
                               Grid.RowSpan="10"
                               Grid.ColumnSpan="3">
                                <VerticalStackLayout>
                                        <Image Source="show_do_milhao.png"
                                               Aspect="AspectFill"/>

                                        <Label Text="Universitários"
                                               HorizontalTextAlignment="Center"
                                               FontFamily="StalystaPersonal"
                                               Margin="30, 10"
                                               FontSize="24"/>
                                </VerticalStackLayout>
                        </Frame>
                        <!--Frame de GameOver-->
                        <Frame IsVisible="false"
                               x:Name="frameGameOver"
                               Grid.RowSpan="10"
                               Grid.ColumnSpan="3"
                               Margin="20"
                               Padding="0"
                               BackgroundColor="Black">
                                <VerticalStackLayout>
                                        <Image Source="show_do_milhao.png"
                                               Aspect="AspectFill"
                                               Grid.Row="0"
                                               Margin="0"/>

                                        <Label Text="Você perdeu"
                                               TextColor="White"
                                               FontFamily="StalystaPersonal"
                                               HorizontalTextAlignment="Center"
                                               Margin="20"
                                               FontSize="50"
                                               Grid.Row="1"/>

                                        <Button Text="RECOMEÇAR"
                                                Clicked="BotaoRecomecar"
                                                TextColor="White"
                                                BackgroundColor="Black"
                                                FontFamily="StalystaPersonal"
                                                BorderColor="White"
                                                BorderWidth="1"
                                                Grid.Row="3"/>
                                </VerticalStackLayout>
                        </Frame>
                </Grid>
        </ScrollView>
</ContentPage>